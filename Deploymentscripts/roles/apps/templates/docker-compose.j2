version: "3.2"
services:
  nginx:
    container_name: nginx
    image: 462619610638.dkr.ecr.eu-west-1.amazonaws.com/smilo/nginx:master
    restart: always
    ports:
      - '80:80'
    volumes:
      - "{{ klm_base_dir }}/nginx.conf:/etc/nginx/nginx.conf"
    links:
      - app
      - gate1
      - gate2
      - gate3
      - gate4
  app:
    container_name: app
    image: 462619610638.dkr.ecr.eu-west-1.amazonaws.com/klm/app:latest
    restart: always
  gate1:
    container_name: gate1
    image: 462619610638.dkr.ecr.eu-west-1.amazonaws.com/klm/gate:latest
    restart: always
  gate2:
    container_name: gate2
    image: 462619610638.dkr.ecr.eu-west-1.amazonaws.com/klm/gate:latest
    restart: always
  gate3:
    container_name: gate3
    image: 462619610638.dkr.ecr.eu-west-1.amazonaws.com/klm/gate:latest
    restart: always
  gate4:
    container_name: gate4
    image: 462619610638.dkr.ecr.eu-west-1.amazonaws.com/klm/gate:latest
    restart: always
